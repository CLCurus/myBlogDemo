    <div class="container">
        <div class="row">
            <div class="aw-content-wrap clearfix">
                <div class="col-sm-12 col-md-9 aw-main-content">
                    <div class="aw-mod aw-explore-list">
                        <div class="mod-body">
                            <div class="aw-common-list" id="hds_container">

                                
                                {{#each articles}}
                                <div class="aw-item active" data-topic-id="57,">
                                    <a class="aw-user-name hidden-xs" data-id="3654" href="/people/" rel="nofollow"><img src="" alt="" /></a>
                                    <div class="aw-question-content">
                                        <h4>
                                            <a href="">{{this.title}}</a>
                                        </h4>
                                        <p>作者:
                                            <a href="/people/" class="aw-user-name"></a>
                                            <span class="text-color-999">• {{this.answerCount}}个回复 • {{this.time}}秒前</span>
                                        </p>
                                    </div>
                                </div>
                                {{/each}}

                            </div>
                        </div>
                        <div class="mod-footer">
                            <div class="page-control" id="temp_pager"></div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


